@model EntityLayer.UserE
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />




<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Malibú</title>

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/Content/css/Css/Login.css" rel="stylesheet" />

</head>
<body>
    <div class="main-wrapper d-flex justify-content-center align-items-center vh-100">
        <div class="custom-card row g-0">
            <div class="col-md-6 d-flex flex-column justify-content-center align-items-center p-5 login-panel-bootstrap">
                <h2 class="mb-4 text-dark fw-bold">Iniciar Sesión</h2>

                <p class="text-muted position-relative separator-text w-100 text-center mb-4">Usuario</p>

                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "w-100", style = "max-width: 320px;" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        @Html.TextBoxFor(model => model.User, new { @class = "form-control rounded-pill custom-input", placeholder = "Usuario" })
                        @Html.ValidationMessageFor(model => model.User, "", new { @class = "text-danger d-block mt-1" })
                    </div>

                    <div class="mb-4">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control rounded-pill custom-input", placeholder = "Password" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger d-block mt-1" })
                    </div>

                    <a href="#" class="d-block text-decoration-none text-primary mb-4 text-end forgot-password-link" onclick="OpenModal('mdlForgotPassword'); return false;">¿Olvidaste tu contraseña?</a>

                    <button type="submit" class="btn btn-success w-100 rounded-pill py-2 custom-submit-btn">INICIAR SESIÓN</button>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger mt-3" })
                }
            </div>

            <div class="col-md-6 d-flex flex-column justify-content-center align-items-center p-5 text-white register-panel-bootstrap rounded-end">
                <h2 class="display-4 fw-bold mb-3">¡Hola!</h2>
                <p class="lead text-center mb-4">Crea tu cuenta para acceder a todas las funciones.</p>
                <button type="button" class="btn btn-outline-light rounded-pill px-4 py-2 custom-register-btn" onclick="OpenModal('mdlCreateUser'); ClearCreateUserForm();">REGISTRAR</button>
            </div>
        </div>
    </div>

    <div class="modal fade" id="mdlCreateUser" tabindex="-1" aria-labelledby="mdlCreateUserLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white d-flex justify-content-center">
                    <h5 class="modal-title" id="mdlCreateUserLabel">Crear Nueva Cuenta de Usuario</h5>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="txtNameCreate" class="form-label">Nombre:</label>
                        <input type="text" class="form-control" id="txtNameCreate" required>
                    </div>
                    <div class="mb-3">
                        <label for="txtUserCreate" class="form-label">Usuario:</label>
                        <input type="text" class="form-control" id="txtUserCreate" required>
                    </div>
                    <div class="mb-3">
                        <label for="txtEmailCreate" class="form-label">Correo Electrónico:</label>
                        <input type="email" class="form-control" id="txtEmailCreate" placeholder="ejemplo@dominio.com" required>
                    </div>
                    <div class="mb-3">
                        <label for="txtPhoneNumberCreate" class="form-label">Número de Teléfono (8 dígitos):</label>
                        <input type="tel" class="form-control" id="txtPhoneNumberCreate" placeholder="xxxxxxxx" maxlength="8" pattern="[0-9]{8}" required>
                    </div>
                    <div class="mb-3">
                        <label for="txtDocumentIDCreate" class="form-label">Cédula / Pasaporte:</label>
                        <input type="text" class="form-control" id="txtDocumentIDCreate" placeholder="Ej: 1-2345-6789 (Cédula) / ABC123456 (Pasaporte)" required>
                    </div>
                    <div class="mb-3">
                        <label for="txtPassCreate" class="form-label">Contraseña:</label>
                        <input type="password" class="form-control" id="txtPassCreate" required>
                    </div>
                    <div class="mb-3">
                        <label for="txtConfirmPassCreate" class="form-label">Confirmar Contraseña:</label>
                        <input type="password" class="form-control" id="txtConfirmPassCreate" required>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button type="button" id="btnCreateAccount" class="btn btn-success" onclick="CreateUserAccount()">Crear Cuenta</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="mdlForgotPassword" tabindex="-1" aria-labelledby="mdlForgotPasswordLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-warning text-dark d-flex justify-content-center">
                    <h5 class="modal-title" id="mdlForgotPasswordLabel">Recuperar Contraseña</h5>
                </div>
                <div class="modal-body">
                    <p>Ingresa tu correo electrónico y te enviaremos un enlace para restablecer tu contraseña.</p>
                    <div class="mb-3">
                        <label for="txtForgotEmail" class="form-label">Correo Electrónico:</label>
                        <input type="email" class="form-control" id="txtForgotEmail" placeholder="tu_correo@ejemplo.com" required>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button type="button" id="btnSendResetLink" class="btn btn-warning" onclick="sendPasswordResetLink()">Enviar Enlace de Restablecimiento</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="mdlResetPassword" tabindex="-1" aria-labelledby="mdlResetPasswordLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white d-flex justify-content-center">
                    <h5 class="modal-title" id="mdlResetPasswordLabel">Restablecer Contraseña</h5>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="txtResetToken" /> <div class="mb-3">
                        <label for="txtNewPassword" class="form-label">Nueva Contraseña:</label>
                        <input type="password" class="form-control" id="txtNewPassword" required>
                    </div>
                    <div class="mb-3">
                        <label for="txtConfirmNewPassword" class="form-label">Confirmar Nueva Contraseña:</label>
                        <input type="password" class="form-control" id="txtConfirmNewPassword" required>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button type="button" id="btnResetPassword" class="btn btn-success" onclick="resetPassword()">Restablecer Contraseña</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>


    <style>
        /* Estilos generales para el fondo del body */
        body {
            background: linear-gradient(to right top, #ffffff, #4f4f4f); /* Fondo degradado suave */
        }

        /* Contenedor principal de los paneles (actúa como la "tarjeta" grande) */
        .custom-card {
            background-color: #ffffff; /* Fondo blanco por defecto para la tarjeta */
            border-radius: 15px; /* Bordes redondeados para la tarjeta */
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2); /* Sombra suave */
            overflow: hidden; /* Asegura que los bordes redondeados se vean bien */
            width: 80%; /* Ancho general para la tarjeta */
            max-width: 900px; /* Ancho máximo */
            min-height: 550px; /* Altura mínima para que se vea el diseño */
        }

        /* Estilos específicos para el panel de Login */
        .login-panel-bootstrap {
            background-color: #ffffff; /* Asegura que el panel de login sea blanco */
            /* No se necesitan muchos estilos aquí, Bootstrap se encarga del layout */
        }

        /* Estilos para el panel de Registro (el de la derecha con degradado) */
        .register-panel-bootstrap {
            background: linear-gradient(to right bottom, #b7f6d8, #198754); /* Degradado naranja/rojo */
            /* Bootstrap ya maneja el color del texto blanco con text-white */
            /* rounded-end aplica el borde redondeado solo al final */
        }

        /* Estilos para los íconos sociales */
        .btn-social {
            width: 50px;
            height: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 1.2em;
            color: #555;
            border-color: #ddd;
            transition: all 0.3s ease;
        }

            .btn-social:hover {
                background-color: #f0f0f0;
                border-color: #bbb;
                color: #333;
            }

        /* Separador "o usa tu email" */
        .separator-text {
            display: flex;
            align-items: center;
            text-align: center;
            color: #888;
            font-size: 0.9em;
        }

            .separator-text::before,
            .separator-text::after {
                content: '';
                flex-grow: 1;
                height: 1px;
                background-color: #ccc;
                margin: 0 10px; /* Espacio entre la línea y el texto */
            }

        /* Estilo para los inputs personalizados (redondeados y con fondo gris) */
        .custom-input {
            border: none; /* Eliminar el borde por defecto de Bootstrap */
            background-color: #f0f0f0; /* Fondo gris claro */
            padding: 12px 20px;
            font-size: 1em;
        }

            .custom-input:focus {
                outline: none; /* Eliminar el outline por defecto */
                background-color: #e5e5e5; /* Fondo un poco más oscuro al enfocar */
                box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25); /* Sombra suave de enfoque (similar a Bootstrap primary) */
            }

        /* Estilo para el botón de iniciar sesión */
        .custom-submit-btn {
            background-color: #198754 !important; /* Verde - ¡Aseguramos que este color prevalezca! */
            border-color: #198754 !important; /* Mismo color para el borde */
            font-weight: bold;
            letter-spacing: 1px;
            transition: background-color 0.3s ease, border-color 0.3s ease, transform 0.2s ease;
        }

            .custom-submit-btn:hover {
                background-color: #689680 !important; /* Verde un poco más oscuro al pasar el ratón */
                border-color: #689680 !important;
                transform: translateY(-2px); /* Efecto de "levantar" */
            }

        /* Estilo para el botón de registrar en el panel derecho */
        .custom-register-btn {
            font-weight: bold;
            letter-spacing: 1px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .custom-register-btn:hover {
                background-color: white; /* Fondo blanco al pasar el ratón */
                color: #b7f6d8; /* Texto del color del botón de login */
            }

        /* Estilo para el enlace de "olvidaste tu contraseña" */
        .forgot-password-link {
            font-size: 0.9em;
        }
    </style>

    @* Mover todos los scripts al final del body *@
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Función para abrir cualquier modal
        function OpenModal(modalId) {
            $('#' + modalId).modal('show');
        }

        // Función para cerrar cualquier modal
        function CloseModal(modalId) {
            $('#' + modalId).modal('hide');
        }

        // Función para limpiar el formulario de "Crear Cuenta"
        function ClearCreateUserForm() {
            $('#txtNameCreate').val('');
            $('#txtUserCreate').val('');
            $('#txtEmailCreate').val('');
            $('#txtPhoneNumberCreate').val('');
            $('#txtDocumentIDCreate').val('');
            $('#txtPassCreate').val('');
            $('#txtConfirmPassCreate').val('');
        }

        // NUEVA FUNCIÓN: Mostrar alerta con SweetAlert2
        function ShowMessageModal(type, title, message, redirectUrl = null) {
            Swal.fire({
                title: title,
                text: message,
                icon: type,
                confirmButtonText: 'Aceptar',
                didClose: () => {
                    if (redirectUrl) {
                        window.location.href = redirectUrl;
                    }
                }
            });
        }



        // Función para validar número de teléfono de 8 dígitos
        function isValidPhoneNumber(phone) {
            const phoneRegex = /^[0-9]{8}$/;
            return phoneRegex.test(phone);
        }

        // Función para validar DocumentID (Cédula CR o Pasaporte)
        function isValidDocumentID(docId) {
            // Expresión regular para cédula costarricense (ej: 1-1234-5678, X-YYYY-ZZZZ, etc.)
            const cedulaRegex = /^\d-\d{4}-\d{4}$/;
            // Expresión regular para pasaporte (ej: ABC123456, 123456789, etc. - puede ser más flexible)
            const passportRegex = /^[A-Z0-9]{6,15}$/i;

            return cedulaRegex.test(docId) || passportRegex.test(docId);
        }


        // Función para manejar el envío del formulario "Crear Cuenta"
        function CreateUserAccount() {
            var name = $('#txtNameCreate').val();
            var user = $('#txtUserCreate').val();
            var email = $('#txtEmailCreate').val();
            var phoneNumber = $('#txtPhoneNumberCreate').val();
            var documentID = $('#txtDocumentIDCreate').val();
            var password = $('#txtPassCreate').val();
            var confirmPassword = $('#txtConfirmPassCreate').val();

            // Validaciones
            if (name.trim() === '' || user.trim() === '' || email.trim() === '' ||
                phoneNumber.trim() === '' || documentID.trim() === '' ||
                password.trim() === '' || confirmPassword.trim() === '') {
                ShowMessageModal('error', 'Campos Obligatorios', 'Por favor, complete todos los campos obligatorios.');
                return;
            }


            if (!isValidPhoneNumber(phoneNumber)) {
                ShowMessageModal('error', 'Formato de Teléfono Inválido', 'El número de teléfono debe ser de 8 dígitos numéricos.');
                return;
            }

            if (!isValidDocumentID(documentID)) {
                ShowMessageModal('error', 'Formato de Documento Inválido', 'Por favor, ingrese una cédula costarricense (ej: 1-2345-6789) o un número de pasaporte válido.');
                return;
            }

            if (password !== confirmPassword) {
                ShowMessageModal('error', 'Error de Contraseña', 'Las contraseñas no coinciden.');
                return;
            }

            $.ajax({
                url: '@Url.Action("RegisterNewUser", "Login")',
                type: 'POST',
                data: {
                    Name: name,
                    User: user,
                    Email: email,
                    PhoneNumber: phoneNumber,
                    DocumentID: documentID,
                    Password: password
                },
                success: function(response) {
                    if (response.success) {
                        ShowMessageModal('success', '¡Éxito!', 'Cuenta creada exitosamente. Ahora puedes iniciar sesión.', '@Url.Action("Index", "Home")');
                        CloseModal('mdlCreateUser');
                        ClearCreateUserForm();
                    } else {
                        ShowMessageModal('error', 'Error al Crear Cuenta', 'Error al crear la cuenta: ' + response.message);
                    }
                },
                error: function(xhr, status, error) {
                    ShowMessageModal('error', 'Error de Conexión', 'Ocurrió un error al intentar crear la cuenta. Intente de nuevo.');
                    console.error(xhr.responseText);
                }
            });
        }

        // --- FUNCIONALIDAD DE RECUPERACIÓN DE CONTRASEÑA ---
    function sendPasswordResetLink() {
        var email = $('#txtForgotEmail').val();

        if (email.trim() === '') {
            ShowMessageModal('error', 'Campo Obligatorio', 'Por favor, ingrese su correo electrónico.');
            return;
        }

        // Puedes añadir una validación de formato de email aquí si quieres que sea también en el cliente
        // if (!isValidEmail(email)) { ... }

        $.ajax({
            url: '@Url.Action("SendPasswordResetLink", "Login")',
            type: 'POST',
            data: { email: email },
            success: function(response) {
                if (response.success) {
                    ShowMessageModal('success', 'Correo Enviado', response.message);
                    CloseModal('mdlForgotPassword');
                    $('#txtForgotEmail').val(''); // Limpiar el campo
                } else {
                    ShowMessageModal('error', 'Error', response.message);
                }
            },
            error: function(xhr, status, error) {
                ShowMessageModal('error', 'Error de Conexión', 'Ocurrió un error al intentar enviar el correo. Intente de nuevo.');
                console.error(xhr.responseText);
            }
        });
    }
    </script>
</body>
</html>